{
  "name": "timezone-manager",
  "version": "1.0.0",
  "description": "App that shows time in different timezones",
  "author": "Vlad Nicula <vladnicula@gmail.com>",
  "scripts": {
    "start-server-dev": "cross-env NODE_ENV=development node --trace-warnings -r babel-register -r babel-polyfill ./server/index.js",
    "pretest": "cross-env NODE_ENV=test node --trace-warnings -r babel-register -r babel-polyfill ./scripts/pre-test.js",
    "test": "cross-env NODE_ENV=test ava"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "cross-env": "^5.0.1",
    "express": "^4.15.3",
    "jsonwebtoken": "^7.4.1",
    "mongoose": "^4.11.1",
    "mongoose-unique-validator": "^1.0.5",
    "morgan": "^1.8.2"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2"    
  },
  "ava": {
    "files": [
      "tests/**/*.js",
      "!tests/rest-blackbox/setup.js"
    ],
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*",
      "!build/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "powerAssert": false,
    "require": [
      "babel-register",
      "babel-polyfill"    
    ],
    "babel": "inherit"
  }
}
